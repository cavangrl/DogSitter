<h1>Listing sitters</h1>

<table>
  <thead>
    <tr>
      <th>Dog</th>
      <th>Summary</th>
      <th>Years of experience</th>
      <th>Insurance</th>
      <th>Full time</th>
      <th>Doggie cam</th>
      <th>Solo care</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sitters.each do |sitter| %>
      <tr>
        <td><%= sitter.dog %></td>
        <td><%= sitter.summary %></td>
        <td><%= sitter.years_of_experience %></td>
        <td><%= sitter.insurance %></td>
        <td><%= sitter.full_time %></td>
        <td><%= sitter.doggie_cam %></td>
        <td><%= sitter.solo_care %></td>
        <td><%= link_to 'Show', sitter %></td>
        <td><%= link_to 'Edit', edit_sitter_path(sitter) %></td>
        <td><%= link_to 'Destroy', sitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

